@page "/BookBoat/{id:int}"
@model Hillerød_Sejlklub.Pages.BookBoats.BookBoatModel
@{
}

<h1>Book @Model.Boat?.Name</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="StartDate"></label>
        <input class="form-control" asp-for="StartDate" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="EndDate"></label>
        <input class="form-control" asp-for="EndDate" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Destination"></label>
        <input class="form-control" asp-for="Destination" />
        <span asp-validation-for="Destination" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Book</button>
</form>
