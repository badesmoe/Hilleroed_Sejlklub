@page "{id:int}"
@model Hillerød_Sejlklub.Pages.Events.EventDetailsModel
@{
}

<h2>@Model.CurrentEvent?.Name</h2>



@if (TempData["JoinMessage"] != null)
{
    <div class="alert @( (bool)TempData["JoinSuccess"] ? "alert-success" : "alert-danger")">
        @TempData["JoinMessage"]
    </div>
}

<p><b>Dato:</b> @Model.CurrentEvent?.Date.ToString("dd-MM-yyyy")</p>
<p><b>Beskrivelse:</b> @Model.CurrentEvent?.Description</p>
<p><b>Maks deltagere:</b> @Model.CurrentEvent?.MaxParticipants</p>

<h3>Deltagere</h3>
@if (!string.IsNullOrEmpty(Model.CurrentEvent.ImagePath))
{
    <img src="@Model.CurrentEvent.ImagePath"
         style="max-width:100%; border-radius:10px; margin-bottom:15px;" />
}

@if (Model.CurrentEvent?.Participants != null && Model.CurrentEvent.Participants.Any())
{
    <ul class="list-group">
        @foreach (var p in Model.CurrentEvent.Participants)
        {
            <li class="list-group-item">
                <strong>@p.Name</strong><br />
                <small class="text-muted">
                    📧 @p.Email <br />
                    📞 @p.Phone
                </small>
            </li>
        }
    </ul>
}
else
{
    <p>Ingen deltagere endnu.</p>
}

@if (Model.CurrentEvent.Participants.Count < Model.CurrentEvent.MaxParticipants)
{
    <button class="btn btn-success mt-3"
            data-bs-toggle="modal"
            data-bs-target="#joinModal">
        Tilmeld event
    </button>
}
else
{
    <p class="text-danger mt-3">
        Eventet er fuldt booket.
    </p>
}

@{
    var taken = Model.CurrentEvent.Participants.Count;
    var max = Model.CurrentEvent.MaxParticipants;
    var available = max - taken;
    var badgeClass = available == 0 ? "bg-danger"
                   : available <= 2 ? "bg-warning"
                   : "bg-success";
}

@if (!Model.CurrentEvent.Participants
        .Any(p => p.Email == Model.NewParticipant.Email))
{
    <!-- show Tilmeld -->
}

<ul class="list-group">
    @foreach (var p in Model.CurrentEvent.Participants)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <strong>@p.Name</strong><br />
                <small class="text-muted">@p.Email</small>
            </div>

            <form method="post"
                  asp-page-handler="Cancel"
                  asp-route-id="@Model.CurrentEvent.EventId"
                  class="ms-3"
                  onsubmit="return confirm('Er du sikker på, at du vil afmelde dette event?');">

                <input type="hidden" name="cancelEmail" value="@p.Email" />

                <button type="submit" class="btn btn-outline-danger btn-sm">
                    Afmeld
                </button>
            </form>
            <div class="modal fade"
                 id="cancelModal-@p.Email.Replace("@", "").Replace(".", "")"
                 tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h5 class="modal-title">Bekræft afmelding</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <div class="modal-body">
                            <p>
                                Er du sikker på, at du vil afmelde
                                <strong>@p.Name</strong> fra dette event?
                            </p>
                        </div>

                        <div class="modal-footer">
                            <button type="button"
                                    class="btn btn-secondary"
                                    data-bs-dismiss="modal">
                                Nej
                            </button>

                            <!-- REAL submit -->
                            <button type="submit"
                                    class="btn btn-danger">
                                Ja, afmeld
                            </button>
                        </div>

                    </div>
                </div>
            </div>

        </li>
    }
</ul>

<span class="badge @badgeClass">
    @taken / @max pladser optaget – @available ledige
</span>

<div class="modal fade" id="joinModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Join">
                <div class="modal-header">
                    <h5 class="modal-title">Tilmeld event</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label>Navn</label>
                        <input asp-for="NewParticipant.Name"
                               class="form-control"
                               required />
                    </div>

                    <div class="mb-3">
                        <label>Email</label>
                        <input asp-for="NewParticipant.Email"
                               type="email"
                               class="form-control"
                               required />
                    </div>

                    <div class="mb-3">
                        <label>Telefone</label>
                        <input asp-for="NewParticipant.Phone"
                               type="tel"
                               placeholder="+45 xx xx xx xx"
                               class="form-control"
                               required />
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-success">Tilmeld</button>
                </div>
            </form>
        </div>
    </div>
</div>